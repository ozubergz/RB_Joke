<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_set_up"
        tools:text="Category"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_set_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        tools:text="Joke set up"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_name"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        tools:text="Delivery"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_set_up" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:text="safe: true"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery"/>

</androidx.constraintlayout.widget.ConstraintLayout>